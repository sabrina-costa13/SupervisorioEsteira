#:kivy 1.11.1

<ModbusPopup>:
    title:"Configuração Modbus"
    size_hint_y: None
    size_hint_x: 0.4
    height: 200
    BoxLayout:
        id: layout 
        orientation: "vertical"
        GridLayout:
            cols: 2
            rows:2
            Label:
                text: "IP"
                font_size: 14
            TextInput:
                id: txt_ip
                text: "10.15.20.17"
                font_size: 14
                haligh: "center"
                valign: "middle"
            Label:
                text: "Porta"
                font_size: 14
            TextInput:
                id: txt_port
                text: "10011"
                font_size: 14
                haligh: "center"
                valign: "middle"
        BoxLayout:
            orientation: "horizontal"
            Button:
                size_hint_y: None
                height: 40
                text: "Conectar"
                on_release:
                    root.clearInfo()
                    app.root.startDataRead(txt_ip.text, int(txt_port.text))
            Button:
                size_hint_y: None
                height: 40
                text: "Fechar"
                on_release:
                    root.dismiss()
                    root.clearInfo()
               
<ScanPopup>:
    title:"Configuração Scantime"
    size_hint_y: None
    size_hint_x: 0.4
    height: 150
    BoxLayout:
        id: layout 
        orientation: "vertical"
        GridLayout:
            cols: 2
            rows:1
            Label:
                text: "Scantime [ms]"
                font_size: 14
            TextInput:
                id: txt_st
                font_size: 14
                haligh: "center"
                valign: "middle"
                padding: 10,10,10,10
        BoxLayout:
            orientation: "horizontal"
            Button:
                size_hint_y: None
                height: 40
                text: "Configurar"
                on_release:
                    app.root._scan_time = int(txt_st.text)
            Button:
                size_hint_y: None
                height: 40
                text: "Fechar"
                on_release: root.dismiss()

<DataGraphPopup>:
    title: "Gráfico de dados"
    BoxLayout:
        orientation: 'vertical'
        TimeSeriesGraph: 
            id: graph
            xlabel:'Tempo'
            ylabel: 'Potência Ativa [W]' 
            background_color: 0.5,0.5,0.5,0.5
            x_ticks_minor: 1
            x_ticks_major: 5 
            y_ticks_major: 100
            y_grid_label: True
            x_grid_label: True
            padding: 5
            x_grid: True
            y_grid: True
            xmin: 0
            ymin: 0
            ymax: 300 #lembrar de alterar de acordo coma velocidade max da esteira
        BoxLayout: #Criando menus de interação
            orientation: 'horizontal'
            size_hint: (1,0.05)
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (0.5,1)
                BoxLayout:
                    orientation: "vertical"
                    size_hint: (0.3,1)
                    Button: 
                        text: "Escolha o dado"
                        on_release: app.root._selectData.open() #selecionar o dado do gráfico de onde vem?
            Label:
                size_hint: (0.3,1)
                text: "Número de pontos do gráfico"
            LabeledCheckBoxDataGraph: # menu de seleção do numero de pontos
                id: np20
                on_kv_post:
                    self.ids.label.text = '20'
                    self.ids.CheckBox.group = 'cb_group'
                    self.ids.CheckBox.active = True
            LabeledCheckBoxDataGraph:
                id: np50
                on_kv_post:
                    self.ids.label.text = '50'
                    self.ids.CheckBox.group = 'cb_group'
            LabeledCheckBoxDataGraph:
                id: np100
                on_kv_post:
                    self.ids.label.text = '100'
                    self.ids.CheckBox.group = 'cb_group'
            Button:
                text: "Fechar"
                size_hint: (0.2,1)
                on_release: root.dismiss()
<PidPopup>:
    title:"Configuração e dados do PID"
    size_hint_y: None
    size_hint_x: 0.8
    height: 600
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            cols: 2
            rows: 5
            Label: 
                text: "PV"
                font_size: 14
            Label:
                id: es.le_carga
                text: '-.- Kgf/cm²'
                font_size: 14
                haligh: "center"
                valign: "middle"
            Label: 
                text: "Status PID"
                font_size: 14
            Label:
                id: es.status_pid
                text: ''
                font_size: 14
                haligh: "center"
                valign: "middle"
            
            Label:
                text: 'Tipo de PID'
                font_size: 14
            Label:
                id: es.sel_pid
                font_size: 14
                haligh: "center"
                valign: "middle"
        BoxLayout:
            orientation: "vertical"
            Label:
                text: " "
                font_size: 14
            GridLayout:
                cols: 2
                rows:2
                CheckBox:
                    id: AutomaticoOn
                    text: "Automático"
                    size: 50, 10
                    group: "Aut/Man"
                    active: False
                Label:
                    text:"Automático"
                CheckBox:
                    id: ManualOn
                    text: "Manual"
                    size: 50, 10
                    group: "Aut/Man"
                    
                    active: True
                Label:
                    text:"Manual"
        GridLayout:
            cols: 2
            rows:5
            Label:
                text: "Defina o Setpoint(SP):"
                font_size: 14
            TextInput:
                id: es.carga 
                font_size: 14
                text: ' '
                haligh: "center"
                valign: "middle"
                padding: 8,8,8,8
                on_text_validate: root.setSetPoint()
                multiline: False
            Label:
                text: "Variável Manipulada (%):"
                font_size: 14
            TextInput:
                id: es.mv_escreve
                text: ' '
                font_size: 14
                haligh: "center"
                valign: "middle"
                padding: 8,8,8,8
                on_text_validate: root.setMV()
                multiline: False
            Label:
                text: "Controle Proporcinal:"
                font_size: 14
            TextInput:
                id: es.p
                font_size: 14
                text: "8.0"
                haligh: "center"
                valign: "middle"
                padding: 8,8,8,8
                on_text_validate: root.setP()   
                multiline: False
            Label:
                text: "Controle Integral:"
                font_size: 14
            TextInput: 
                id: es.i
                font_size: 14
                text: "5.0"
                haligh: "center"
                valign: "middle"
                padding: 8,8,8,8
                on_text_validate: root.setI()
                multiline: False
            Label:
                text: "Controle Derivativo:"
                font_size: 14
            TextInput:
                id: es.d
                font_size: 14
                text: "2.0"
                haligh: "center"
                valign: "middle"
                padding: 8,8,8,8
                on_text_validate: root.setD()
                multiline: False

<MotorPopup>:
    title:"Motor"
    separator_color: 0, 0, 0, 0
    size_hint_y: None
    size_hint_x: 0.95
    height: 350
    GridLayout:
        cols:3
        spacing: 10
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.3

            spacing:10
            Label:
                text: "Comandos na esteira"
                font_size: 14
            Button:
                background_color: 1, 1, 1, 1
                background_normal: ''

                text: "Ligar"
                color: 0, 0, 0, 1
                padding: 8,8,8,8
                height: 100
                on_release: root.setOperacao(1)

            Button:
                background_color: 1, 1, 1, 1
                background_normal: ''

                text: "Desligar"
                color: 0, 0, 0, 1
                padding: 8,8,8,8
                height: 100
                on_release: root.setOperacao(0)

            Button:
                background_color: 1, 1, 1, 1
                background_normal: ''
                text: "Reset"
                color: 0, 0, 0, 1
                padding: 8,8,8,8
                height: 100
                on_release: root.setOperacao(2)

        BoxLayout:
            orientation: "vertical"
            spacing:10
            size_hint_x: 0.3
            size_hint_y: 0.98

            Label: 
                text: "Tipo de partida"
                font_size: 14
            Button:
                background_color: 1, 1, 1, 1
                background_normal: ''
                text: "Partida Direta"
                color: 0, 0, 0, 1
                height: 100
                on_release: root.setPartida('Direta')

            Button:
                background_color: 1, 1, 1, 1
                background_normal: ''
                text: "Partida pelo Inversor"
                color: 0, 0, 0, 1
                height: 100
                on_release: root.setPartida('Inversor')

            Button:
                background_color: 1, 1, 1, 1
                background_normal: ''
                text: "Partida Soft-Start"
                color: 0, 0, 0, 1
                height: 100
                on_release: root.setPartida('Soft-Start')
        BoxLayout:
            orientation: "vertical"
            spacing:10
            size_hint_x: 0.3
            size_hint_y: 0.98


            Label:
                text: "Comandos do inversor"
                font_size: 14
                size_hint_y: 0.025
            BoxLayout:
                orientation: "horizontal"
                size_hint_X:0.75
                BoxLayout:
                    orientation: "vertical"
                    Label:
                        text:"Inversor"
                    GridLayout:
                        cols:2
                        rows:2
                        Label:
                            text: "Acel.(s)"
                        TextInput:
                            id: es.atv31_acc
                            font_size: 14
                            text: "10"
                            haligh: "center"
                            valign: "middle"
                            padding: 8,8,8,8
                            on_text_validate: root.setAcc()
                            multiline: False

                        Label:
                            text: "Desacel.(s)"
                        TextInput:
                            id: es.atv31_dcc
                            font_size: 14
                            text: "10"
                            haligh: "center"
                            valign: "middle"
                            padding: 8,8,8,8
                            on_text_validate: root.setDcc()
                            multiline: False

                    BoxLayout:
                        orientation: "vertical"
                        Label:
                            text:"Velocidade(0 a 60Hz)"
                            bold: True
                        TextInput:
                            id: es.atv31_velocidade
                            font_size: 14
                            text: "60"
                            haligh: "center"
                            valign: "middle"
                            padding: 8,8,8,8
                            on_text_validate: root.setVelInversor()
                            multiline: False


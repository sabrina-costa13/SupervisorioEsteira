#:kivy 1.11.1

<ModbusPopup>:
    title:"Configuração Modbus"
    size_hint_y: None
    size_hint_x: 0.4
    height: 200
    BoxLayout:
        id: layout 
        orientation: "vertical"
        GridLayout:
            cols: 2
            rows:2
            Label:
                text: "IP"
                font_size: 14
            TextInput:
                id: txt_ip
                text: "10.15.20.17"
                font_size: 14
                haligh: "center"
                valign: "middle"
            Label:
                text: "Porta"
                font_size: 14
            TextInput:
                id: txt_port
                text: "10011"
                font_size: 14
                haligh: "center"
                valign: "middle"
        BoxLayout:
            orientation: "horizontal"
            Button:
                size_hint_y: None
                height: 40
                text: "Conectar"
                on_release:
                    root.clearInfo()
                    app.root.startDataRead(txt_ip.text, int(txt_port.text))
            Button:
                size_hint_y: None
                height: 40
                text: "Fechar"
                on_release:
                    root.dismiss()
                    root.clearInfo()
               

<ScanPopup>:
    title:"Configuração Scantime"
    size_hint_y: None
    size_hint_x: 0.4
    height: 150
    BoxLayout:
        id: layout 
        orientation: "vertical"
        GridLayout:
            cols: 2
            rows:1
            Label:
                text: "Scantime [ms]"
                font_size: 14
            TextInput:
                id: txt_st
                font_size: 14
                haligh: "center"
                valign: "middle"
        BoxLayout:
            orientation: "horizontal"
            Button:
                size_hint_y: None
                height: 40
                text: "Configurar"
                on_release:
                    app.root._scan_time = int(txt_st.text)
            Button:
                size_hint_y: None
                height: 40
                text: "Fechar"
                on_release: root.dismiss()

<DataGraphPopup>:
    title: "Gráfico de velocidade da esteira"
    BoxLayout:
        orientation: 'vertical'
        TimeSeriesGraph: 
            id: graph
            xlabel:'Horário'
            ylabel: 'Velocidade [m/s]' 
            background_color : 0.5,0.5,0.5,0.5
            x_ticks_minor: 1
            x_ticks_major: 5 
            y_ticks_major: 100
            y_grid_label: True
            x_grid_label: True
            padding: 5
            x_grid: True
            y_grid: True
            xmin: 0
            ymin: 0
            ymax: 100 #lembrar de alterar de acordo coma velocidade max da esteira
#Criando menus de interação
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1,0.05)
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (0.5,1)
            Label:
                size_hint: (0.3,1)
                text: "Número de pontos do gráfico"
            LabeledCheckBoxDataGraph: # menu de seleção do numero de pontos
                id: np20
                on_kv_post:
                    self.ids.label.text = '20'
                    self.ids.CheckBox.group = 'cb_group'
                    self.ids.CheckBox.active = True
            LabeledCheckBoxDataGraph:
                id: np50
                on_kv_post:
                    self.ids.label.text = '50'
                    self.ids.CheckBox.group = 'cb_group'
            LabeledCheckBoxDataGraph:
                id: np100
                on_kv_post:
                    self.ids.label.text = '100'
                    self.ids.CheckBox.group = 'cb_group'
            Button:
                text: "Fechar"
                size_hint: (0.2,1)
                on_release: root.dismiss()

<LabeledCheckBoxDataGraph>:
    orientation: 'horizontal'
    size_hint: (0.1,1)
    CheckBox:
        id: CheckBox
        on_active: app.root._graph.ids.graph.setMaxPoints(int (label.text),0) if app.root is not None else None
    Label:
        id: label

               
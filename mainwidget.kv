#:kivy 1.11.1

<MainWidget>:
    orientation: 'vertical'
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 0.5
        Rectangle:
            size: self.size
    BoxLayout:
        orientation:'horizontal'
        size_hint:(1,0.1)
        spacing: 10
        Label:
            text: 'Supervisório Esteira'
            size_hint_x: None
            width: 300
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 400
            Label:
                text: 'Configurações'
            BoxLayout:
                orientation:  'horizontal'
                Button:
                    text: 'MODBUS'
                    on_release: root._modbusPopup.open()
                Button:
                    text: 'Scan Time'
                    on_release: root._scanPopup.open()

        Image:
            id: img_con
            size_hint_x: None
            width: 80
            source: 'imgs/desconectado.png'
            pos_hint: {'top':1, 'rigth':1}
    FloatLayout:
        canvas:
            Color:
                rgb: 1,1,1 
            Rectangle:
                size: self.size
        Label: 
            id: es.habilita
            text: '-.- '
            font_size: 20
            bold: True
            halign: 'center'
            pos_hint: {'x':-0.35, 'y':0.4}
            color: 0,0,0,1
        Label:
            id: es.indica_driver
            text: '-.-'
            font_size: 20
            bold: True
            halign: 'center'
            pos_hint: {'x':-0.35, 'y':0.35}
            color: 0,0,0,1
        Label:
            id: es.tipo_motor
            text: '-.-'
            font_size: 20
            bold: True
            halign: 'center'
            pos_hint: {'x':-0.35, 'y':0.3}
            color: 0,0,0,1
        Label:
            id: es.torque
            text: '-.- N.m'
            font_size: 20
            bold: True
            halign: 'center'
            pos_hint: {'x':-0.35, 'y':0.25}
            color: 0,0,0,1
        Label:
            id: es.temp_carc
            text: '-.- ºC'
            font_size: 20
            bold: True
            halign: 'center'
            pos_hint: {'x':-0.35, 'y':0.20}
            color: 0,0,0,1
        Label:
            id: es.corrente_media
            text: '-.- A'
            font_size: 20
            bold: True
            halign: 'center'
            pos_hint: {'x':-0.35, 'y':0.15}
            color: 0,0,0,1
        Label:
            id: es.encoder
            text: '-.- RPM'
            font_size: 20
            bold: True
            halign: 'center'
            pos_hint: {'x':-0.35, 'y':0.10}
            color: 0,0,0,1
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.1,0.1)
            background_color: 0,0,0,0
            pos_hint: {'x':0.1, 'y':0.45}
            Label:
                text: 'ddp entre Fase R e S'

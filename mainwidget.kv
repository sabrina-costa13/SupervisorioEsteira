#:kivy 1.11.1

<MainWidget>:
    orientation: 'vertical'
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 0.5
        Rectangle:
            size: self.size
    BoxLayout:
        orientation:'horizontal'
        size_hint:(1,0.1)
        spacing: 10
        Label:
            text: 'Supervisório Esteira'
            size_hint_x: None
            width: 300
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 400
            Label:
                text: 'Configurações'
            BoxLayout:
                orientation:  'horizontal'
                Button:
                    text: 'MODBUS'
                    on_release: root._modbusPopup.open()
                Button:
                    text: 'Scan Time'
                    on_release: root._scanPopup.open()

        Image:
            id: img_con
            size_hint_x: None
            width: 80
            source: 'imgs/desconectado.png'
            pos_hint: {'top':1, 'rigth':1}
    FloatLayout:
        canvas:
            Color:
                rgb: 1,1,1 
            Rectangle:
                size: self.size
     


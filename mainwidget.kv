#:kivy 1.11.1
#barra superior
<MainWidget>:
    orientation: 'vertical'
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 0.5
        Rectangle:
            size: self.size
    BoxLayout:
        orientation:'horizontal'
        size_hint:(1,0.1)
        spacing: 10
        Label:
            text: 'SUPERVISÓRIO ESTEIRA'
            size_hint_x: None
            width: 300
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 400
            Label:
                text: 'Configurações'
            BoxLayout:
                orientation:  'horizontal'
                Button:
                    text: 'MODBUS'
                    on_release: root._modbusPopup.open()
                Button:
                    text: 'Scan Time'
                    on_release: root._scanPopup.open()
        Image:
            id: img_con
            size_hint_x: None
            width: 80
            source: 'imgs/desconectado.png'
            pos_hint: {'top':1, 'rigth':1}     
    FloatLayout:
        canvas:
            Color:
                rgb: 1,1,1 
            Rectangle:
                size: self.size
        Image:
            source: 'imgs/esteira.jpg'
        Label:
            id: lb_velocidade
            size_hint: (None,None)
            size: (velocidade.size[0],velocidade.size[1])
            pos_hint: {'x':0.8,'y':0.5}
            canvas:
                Color: 
                    rgb: 1,0,0
                Rectangle:
                    size: self.size
                    pos: (self.pos[0]+self.width*1.5,self.pos[1])
        Image:
            id: velocidade
            source: 'imgs/regua.png'
            size_hint: 0.5,0.5
            pos_hint: lb_velocidade.pos_hint
        Button:
            size_hint: (0.25, 0.25)
        
            background_normal: 'imgs/btgraph.png'
            background_down: 'imgs/btgraph.png'
            pos_hint: {'x':0.75,'y':0.22}
            on_release:
                root._graph.open()

        Label: 
            id: es.habilita
            text: '-.- '
            font_size: 20
            bold: True
            halign: 'center'
            pos_hint: {'x':-0.35, 'y':0.4}
            color: 0,0,0,1
        Label:
            id: es.indica_driver
            text: '-.-'
            font_size: 20
            bold: True
            halign: 'center'
            pos_hint: {'x':-0.35, 'y':0.35}
            color: 0,0,0,1
        Label:
            id: es.tipo_motor
            text: '-.-'
            font_size: 20
            bold: True
            halign: 'center'
            pos_hint: {'x':-0.35, 'y':0.3}
            color: 0,0,0,1
        Label:
            id: es.torque
            text: '-.- N.m'
            font_size: 20
            bold: True
            halign: 'center'
            pos_hint: {'x':-0.35, 'y':0.25}
            color: 0,0,0,1
        Label:
            id: es.temp_carc
            text: '-.- ºC'
            font_size: 20
            bold: True
            halign: 'center'
            pos_hint: {'x':-0.35, 'y':0.20}
            color: 0,0,0,1
        Label:
            id: es.corrente_media
            text: '-.- A'
            font_size: 20
            bold: True
            halign: 'center'
            pos_hint: {'x':-0.35, 'y':0.15}
            color: 0,0,0,1
        Label:
            id: es.encoder
            text: '-.- RPM'
            font_size: 20
            bold: True
            halign: 'center'
            pos_hint: {'x':-0.35, 'y':0.10}
            color: 0,0,0,1
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.1,0.1)
            background_color: 0,0,0,0
            pos_hint: {'x':0.1, 'y':0.45}
            Label:
                text: 'ddp entre Fase R e S'
                font_size: 20
                bold: True
                halign: 'center'
                color: 0,0,0,1
            Label:
                id: es.tensao_rs
                text: '-.- V'
                font_size: 20
                bold: True
                halign: 'center'
                color: 0,0,0,1
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.1,0.1)
            background_color: 0,0,0,0
            pos_hint: {'x':0.1, 'y':0.35}
            Label:
                text: 'ddp entre Fase S e T'
                font_size: 20
                bold: True
                halign: 'center'
                color: 0,0,0,1
            Label:
                id: es.tensao_st
                text: '-.- V'
                font_size: 20
                bold: True
                halign: 'center'
                color: 0,0,0,1
       
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.1,0.1)
            background_color: 0,0,0,0
            pos_hint: {'x':0.1, 'y':0.25}
            Label:
                text: 'ddp entre Fase T e R'
                font_size: 20
                bold: True
                halign: 'center'
                color: 0,0,0,1
            Label:
                id: es.tensao_tr
                text: '-.- V'
                font_size: 20
                bold: True
                halign: 'center'
                color: 0,0,0,1
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.1,0.1)
            background_color: 0,0,0,0
            pos_hint: {'x':0.1, 'y':0.15}
            Label:
                text: 'Carga na Esteira'
                font_size: 20
                bold: True
                halign: 'center'
                color: 0,0,0,1
            Label:
                id: cargaPV
                text: '-.- Kgf/cm²'
                font_size: 20
                bold: True
                halign: 'center'
                color: 0,0,0,1
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.1,0.1)
            pos_hint: {'x':0.1, 'y':0.05}
            Label:
                text: 'Velocidade da Esteira'
                font_size: 20
                bold: True
                halign: 'center'
                color: 0,0,0,1
            Label:
                id: es.esteira
                text: '-.- m/min'
                font_size: 20
                bold: True
                halign: 'center'
                color: 0,0,0,1
     


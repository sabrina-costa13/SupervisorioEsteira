#:kivy 1.11.1
#barra superior
<MainWidget>:
    orientation: 'vertical'
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 0.5
        Rectangle:
            size: self.size
    BoxLayout:
        orientation:'horizontal'
        size_hint:(1,0.1)
        spacing: 10
        Label:
            text: 'SUPERVISÓRIO ESTEIRA'
            size_hint_x: None
            width: 300
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 400
            Label:
                text: 'Configurações'
            BoxLayout:
                orientation:  'horizontal'
                Button:
                    text: 'MODBUS'
                    on_release: root._modbusPopup.open()
                Button:
                    text: 'Scan Time'
                    on_release: root._scanPopup.open()
        Image:
            id: img_con
            size_hint_x: None
            width: 80
            source: 'imgs/desconectado.png'
            pos_hint: {'top':1, 'rigth':1}     
#inserindo a planta
    FloatLayout:
        canvas:
            Color:
                rgb: 1,1,1 
            Rectangle:
                size: self.size
        Image:
            source: 'imgs/esteira.png'
        Label:
            id: lb_velocidade
            size_hint: (None,None)
            size: (velocidade.size[0],velocidade.size[1])
            pos_hint: {'x':0.79,'y':0.45}
            canvas:
                Color: 
                    rgb: 1,0,0
                Rectangle:
                    size: self.size
                    pos: (self.pos[0]+self.width*1.5,self.pos[1])
        Button: #botoes de Configuração
            text :'PID'
            pos_hint:{'x':0.60, 'y':0.05}
            size_hint:(0.2,0.075)
            padding: 10,10
            on_release:root._pidPopup.open()
        Button:
            text: 'Motor'
            pos_hint:{'x':0 , 'y':0.15}
            size_hint:(0.2,0.075)
            padding: 10,10
            on_release:root._motorPopup.open()
        Button:
            text: 'Dados Históricos'
            pos_hint:{'x':0.80, 'y':0.05}
            size_hint:(0.2,0.075)
            padding: 10,10
            on_release:root._hgraph.open()
        
        Button:
            text: 'Variáveis Elétricas'
            pos_hint:{'x':0.40, 'y':0.05}
            size_hint:(0.2,0.075)
            padding: 10,10
            on_release:root._vareltPopup.open()
        

        Image:
            id: velocidade
            source: 'imgs/regua.png'
            size_hint: 0.5,0.5
            pos_hint: lb_velocidade.pos_hint
        Button:
            size_hint: (0.07, 0.07)
            background_normal: 'imgs/graph_icon.png'
            background_down: 'imgs/graph_icon.png'
            pos_hint: {'x':0.88,'y':0.36}
            on_release:
                root._graph.open()

        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.1,0.1)
            background_color: 0,0,0,0
            pos_hint: {'x':0.1, 'y':0.6}
            Label:
                text: 'Carga na Esteira'
                font_size: 20
                bold: True
                halign: 'center'
                color: 0,0,0,1
            Label:
                id: es.carga
                text: '-.- Kgf/cm²'
                font_size: 20
                bold: True
                halign: 'center'
                color: 0,0,0,1
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.1,0.1)
            pos_hint: {'x':0.1, 'y':0.7}
            Label:
                text: 'Velocidade da Esteira'
                font_size: 20
                bold: True
                halign: 'center'
                color: 0,0,0,1
            Label:
                id: es.esteira
                text: '-.- m/min'
                font_size: 20
                bold: True
                halign: 'center'
                color: 0,0,0,1
     